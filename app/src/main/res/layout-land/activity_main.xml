<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".MainActivity">

    <ru.berendeev.roman.clock.view.ClockView
            android:id="@+id/clockView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:hoursWidth="2dp"
            app:hoursLength="16dp"
            app:minutesLength="4dp"
            app:minutesWidth="6dp"
            app:divisionPadding="4dp"
            app:hourPadding="-5dp"
            app:textSize="40sp"
            app:hoursArrowWidth="8dp"
            />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="16sp"
                    android:id="@+id/rightView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="Верных: 8"
                    android:padding="12dp"
                    android:textColor="@color/green"
                    android:gravity="center"
                    />

            <TextView
                    android:textSize="16sp"
                    android:id="@+id/wrongView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="Неверных: 8"
                    android:padding="12dp"
                    android:textColor="@color/red"
                    android:gravity="center"
                    />
        </LinearLayout>

        <TextView
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:id="@+id/timeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                tools:text="13 часов 23 минуты 12 секунд"
                />

        <LinearLayout
                android:id="@+id/firstLine"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/secondLine"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/thirdLine"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Стереть"
                    />

            <Button
                    android:id="@+id/readyButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Готово"
                    />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

